<h1>Update Pet</h1>


<form action="/owners/<%=@owner.id%>" method="POST">
  <label>Name:</label>

  <br></br>

  <input type="text" name="pet[name]" id="pet_name" value="<%=@pet.name%>">

  <br>

  <label>Choose an existing owner:</label>

  <br>

  <%Owner.all.each do |owner| %>
  <input type="checkbox" name="pet[owner_id]" id="<%=owner.id" value="<%=owner.id>" <%='checked' if @owner.pets.include?(pet) %>><%=pet.name%></input>]